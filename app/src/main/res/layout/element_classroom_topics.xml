<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/element_classroom_background"
        android:padding="15dp"
        android:layout_margin="8dp"
        android:elevation="5dp">

        <LinearLayout
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/position"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="Electric Charges and Fields"
                android:fontFamily="@font/montserrat"
                android:textSize="14.5sp"
                android:textStyle="bold"
                android:textColor="#676B72"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="#A6ACB5"
                    android:text="All Videos"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="All Exercise"
                    android:fontFamily="@font/roboto"
                    android:textColor="#A6ACB5"
                    android:drawableStart="@drawable/ic_dot_2"
                    android:textSize="12sp"
                    android:drawablePadding="07dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="All Notes"
                    android:fontFamily="@font/roboto"
                    android:textColor="#A6ACB5"
                    android:drawableStart="@drawable/ic_dot_2"
                    android:drawablePadding="07dp"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_bold"
            android:text="01"
            android:textColor="#99FEA128" />

    </RelativeLayout>

</layout>